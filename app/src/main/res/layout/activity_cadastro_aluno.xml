<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CadastroAlunoActivity"
    android:orientation="vertical"
    android:background="@drawable/back">

    <EditText
        android:id="@+id/nome"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:inputType="text"
        android:backgroundTint="#0085cb"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#0085cb"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/senha"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:backgroundTint="#0085cb"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#0085cb"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/instituicao"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Nome da Instituição"
        android:backgroundTint="#0085cb"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#0085cb"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/media_institucional"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Média da Instituição"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#0085cb"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#0085cb"/>

    <EditText
        android:id="@+id/media_pessoal"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Média Pessoal"
        android:backgroundTint="#0085cb"
        android:textColorHint="#0085cb"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/cadastrar_button"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Cadastrar"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/botao"/>



</LinearLayout>